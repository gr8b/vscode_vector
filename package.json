{
  "name": "devector",
  "displayName": "Vector 06c Asm + Debugger",
  "description": "Assemble and run Intel 8080 asm on a Vector 06c VM with debugger.",
  "version": "0.1.10",
  "publisher": "AlexFedotovskikh",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parallelno/vscode_vector"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepublish": "npm run compile",
    "test-directives": "npm run compile && node ./out/tools/run_directive_tests.js",
    "test-emulator": "npm run compile && node ./out/tools/run_emulator_tests.js",
    "test": "npm run compile && npm run test-directives && npm run test-emulator"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "pngjs": "^7.0.0"
  },
  "activationEvents": [
    "onLanguage:asm",
    "onCommand:devector.compileProject",
    "onCommand:devector.createProject",
    "onDebug"
  ],
  "contributes": {
    "languages": [
      {
        "id": "asm",
        "extensions": [".asm"],
        "aliases": ["ASM", "asm"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "asm",
        "scopeName": "source.retroasm_8080",
        "path": "./syntaxes/devector_8080.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "asm"
      }
    ],
    "commands": [
      {
        "command": "devector.createProject",
        "title": "Devector: Create Project"
      },
      {
        "command": "devector.compileProject",
        "title": "Devector: Compile Project"
      }
    ],
    "keybindings": [
      {
        "key": "f9",
        "command": "devector.toggleBreakpoint",
        "when": "editorTextFocus && !editorReadonly && editorLangId == asm"
      }
    ],
    "debuggers": [
      {
        "type": "devector",
        "label": "Devector Debugger",
        "program": "./out/debugAdapter.js",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to .asm (source) or .bin (binary) to run"
              }
            }
          }
        },
        "languages": [
          "asm"
        ]
      }
    ]
    ,
    "menus": {
      "editor/context": [
        {
          "command": "devector.toggleBreakpoint",
          "group": "navigation",
          "when": "editorLangId == asm"
        }
      ]
    }
  }
}
